<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.MatchDetail"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="매치 상세정보"
            android:gravity="center"
            android:textSize="20sp"
            android:fontFamily="@font/nexon_football_gothic_b"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tvMatchResultTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="무"
            android:gravity="center"
            android:fontFamily="@font/nexon_football_gothic_b"
            android:layout_marginTop="5dp"
            android:textSize="20sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btPlayerListHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IFSTA"
                android:layout_weight="2"
                android:gravity="center"
                android:fontFamily="@font/nexon_football_gothic_b" />

            <TextView
                android:id="@+id/tvMatchResultHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_weight="1"
                android:gravity="center"
                android:fontFamily="@font/nexon_football_gothic_l"/>

            <TextView
                android:id="@+id/detailVerse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VS"
                android:gravity="center"
                android:fontFamily="@font/nexon_football_gothic_l"/>

            <TextView
                android:id="@+id/tvMatchResultAway"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_weight="1"
                android:gravity="center"
                android:fontFamily="@font/nexon_football_gothic_l"/>

            <Button
                android:id="@+id/btPlayerListAway"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IFSTA"
                android:layout_weight="2"
                android:gravity="center"
                android:fontFamily="@font/nexon_football_gothic_b" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="선수 리스트"
                android:textSize="20sp"
                android:gravity="center"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                android:layout_marginTop="5dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvPlayerList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>